<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/total_relative_layout"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_text_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/recovered_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_delta_count_text_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/total_text_view"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="+0" />

        <TextView
            android:id="@+id/total_count_text_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/total_delta_count_text_view"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="999999" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>